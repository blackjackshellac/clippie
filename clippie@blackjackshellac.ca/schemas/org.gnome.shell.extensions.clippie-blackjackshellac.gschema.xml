<schemalist gettext-domain="clippie-blackjackshellac">
  <schema id="org.gnome.shell.extensions.clippie-blackjackshellac"
          path="/org/gnome/shell/extensions/clippie-blackjackshellac/">
    <key name="debug" type="b">
      <default>false</default>
      <summary>Turn on debugging</summary>
    </key>
    <key name="entries" type="i">
      <default>20</default>
      <summary>Maximum number of clipboard entries to show on the main menu</summary>
    </key>
    <key name="state" type="s">
      <default>'{}'</default>
      <summary>Information to restore state after restart</summary>
    </key>
  </schema>
</schemalist>
